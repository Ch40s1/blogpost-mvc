{{#each blogposts as |blogpost|}}
<div class="mt-3 container blogpost">
  <div class="d-flex justify-content-around title">
    <h3 id="post-title">{{blogpost.title}}</h3>
    <h3 id="post-creator">Created by {{blogpost.name}} on {{format_date blogpost.date}}</h3>
  </div>
  <div class="p-4 post-text">
    <p id="description">{{blogpost.description}}</p>
  </div>
  <div class="d-flex justify-content-center viewing">
    <button class="no-button reveal-comments">View Comments</button>
    <div class="hidden-container">
      <button class="add-comment" data-blogpost-id="{{blogpost.id}}">Add Comment</button>
      <div class="comment-container">
        {{#each blogpost.comments as |comment|}}
        <p style="color: aqua;">{{comment.description}}</p>
        {{/each}}
      </div>
    </div>
  </div>
</div>
{{/each}}
{{#if logged_in}}
<h1 id="user-name" style="display: none;" data-name="{{user_name}}">hide</h1>
<script src="https://cdnjs.cloudflare.com/ajax/libs/dayjs/1.11.10/dayjs.min.js"
integrity="sha512-FwNWaxyfy2XlEINoSnZh1JQ5TRRtGow0D6XcmAWmYCRgvqOUTnzCxPc9uF35u5ZEpirk1uhlPVA19tflhvnW1g=="
crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script src='/js/comment.js'></script>
{{else }}
<div class="d-flex justify-content-center mt-4">
  <h4>log in to view comments</h4>
</div>
{{/if}}
