{{#each blogposts as |blogpost|}}
<div class="mt-3 container blogpost">
  <div class="d-flex justify-content-around title">
    <h3 id="post-title">{{blogpost.title}}</h3>
    <h3 id="post-creator">Created by {{blogpost.name}} on {{format_date blogpost.date}}</h3>

  </div>
  <div class="p-4 post-text">
    <p id="description">
      {{blogpost.description}}
    </p>
  </div>
<div class="d-flex justify-content-center ">
  <button>Comment</button>
</div>
</div>
{{/each}}
